{% extends '::layout_admin.html.twig' %}

{% block head_style %}
    {{ parent() }}
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>
{% endblock %}


{% block navbar %}{% endblock navbar %}
{% block page_header %}{% endblock page_header %}
{% block content %}
    {% block fos_user_content %}


<div class="span12">
        <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
            <h2 class="form-signin-heading">Administración</h2>
            {% if error %}
                <div class="alert alert-error">
                   <i class="icon-remove"></i> {{ error|trans({}, 'FOSUserBundle') }}
                </div>

            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            {#<label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>#}
            <input class="input-block-level" placeholder="Usuario" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

            {#<label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>#}
            <input placeholder="Contraseña" class="input-block-level" type="password" id="password" name="_password" required="required" />

            <label for="remember_me" class="checkbox">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            </label>
            <button class="btn btn-large btn-primary" type="submit">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        </form>

</div>
    {% endblock fos_user_content %}

{% endblock content %}